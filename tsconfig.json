{ 
  "compileOnSave": true,
  "compilerOptions": {
    "lib": [
      "es2021",
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true, 
    "strict": true, 
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "moduleResolution": "node",
    "declaration": true,
    "allowJs": false,
    "emitDeclarationOnly": false,
    "declarationMap": true
  },
  "include": [ "src/**/*.ts" ],
  "exclude": [ "docs/**/*.md" ]
}